@{
  Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Machine

<h1>Edit Machine</h1>
<p>Editing @Model.Model</p>

<p>@Html.ValidationMessageFor(model => model.Manufacturer)</p>
<p>@Html.ValidationMessageFor(model => model.Model)</p>
<p>@Html.ValidationMessageFor(model => model.Serial)</p>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.Manufacturer)
  @Html.TextBoxFor(model => model.Manufacturer)

  @Html.LabelFor(model => model.Model)
  @Html.TextBoxFor(model => model.Model)

  @Html.LabelFor(model => model.Serial)
  @Html.TextBoxFor(model => model.Serial)

  @Html.Label("Operational?")
  @Html.CheckBoxFor(model => model.OperationalStatus)

  @Html.Label("Under Repair?")
  @Html.CheckBoxFor(model => model.RepairStatus)

  @Html.LabelFor(model => model.InspectionDate)
  @Html.TextBoxFor(model => model.InspectionDate, new { type="date" })
  <input type="submit" value="Save Changes" />
}
