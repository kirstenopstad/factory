@{
  Layout = "_Layout";
}

@using Factory.Models

<h1>Machines</h1>
@if (Model.Count == 0)
{
  <p>There are no machines registered in the system yet.</p>
}
<ul>
  @foreach (Machine machine in Model)
  {
    <li>@Html.ActionLink($"{@machine.Model}", "Details", new { id = machine.MachineId})</li>
  }
</ul>
@Html.ActionLink("Add Machine", "Create")